<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".auth.SignUpFragment">


    <View
        android:id="@+id/red_bg"
        android:layout_width="match_parent"
        android:background="@drawable/sign_up"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableStart="@drawable/ic_done"
        android:drawablePadding="10dp"
        android:text="LifeTrack"
        android:textColor="@android:color/white"
        android:textSize="40sp"
        android:layout_marginTop="150dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/red_bg"
        />

    <EditText
        android:id="@+id/number_ed"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="350dp"
        android:hint="Номер телефона"
        android:background="@drawable/rectangle_background"
        app:layout_constraintTop_toTopOf="parent"
        />

    <EditText
        android:id="@+id/code_ed"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/rectangle_background"
        android:hint="Код подтвердения"
        app:layout_constraintTop_toBottomOf="@id/number_ed" />

    <Button
        android:id="@+id/send_number_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Отправить номер"
        android:layout_marginBottom="100dp"
        android:background="@drawable/oval_btn_red"
        app:layout_constraintBottom_toBottomOf="parent"/>


    <Button
        android:id="@+id/send_code_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/material_on_background_disabled"
        android:text="Отправить код"
        app:layout_constraintTop_toBottomOf="@id/send_number_btn"
        app:layout_constraintBottom_toBottomOf="parent"/>



</androidx.constraintlayout.widget.ConstraintLayout>